<% if @usuario.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@usuario.errors.count, "error") %> se encontraron los siguientes errores:</h2>
        <ul>
            <% @usuario.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@usuario) do |f| %>
            <div class = "form-group">
                <%= f.label :nombre, "Nombre" %>
                <%= f.text_field :nombre,  class: 'form-control' %>
            </div>
            <div class = "form-group">
                <%= f.label :email, "Correo" %>
                <%= f.email_field :email,  class: 'form-control' %>
            </div>
            <div class = "form-group">
                <%= f.label :password, "ContraseÃ±a" %>
                <%= f.password_field :password,  class: 'form-control' %>
            </div>
            <div class = "form-group">
                <%= f.label :password_confirmation, "Confirmacion" %>
                <%= f.password_field :password_confirmation,  class: 'form-control' %>
            </div>
            <%= f.submit "Crear", class: "btn btn-success" %>
        <% end %>
    </div>
</div>